@model List<Book>

@foreach (var item in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    jpple
                </a>
                <h3>
                    <a asp-controller="Books" asp-action="Details" asp-route-id = "@item.Id">
                        @item.Name
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="~/assets/image//products/@item.MainImageUrl" alt="">
                    <div class="hover-contents">
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="hover-image">
                            <img src="~/assets/image//products/@item.HoverImageUrl" alt="">
                        </a>
                        <div class="hover-btns">
                            <a href="cart.html" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a asp-controller="books" asp-action="bookmodal" asp-route-id="@item.Id" data-bs-toggle="modal" data-bs-target="#quickModal"
                               class="single-btn bookModalIcon">
                                <i class="fas fa-eye bookModal"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    <span class="price">£51.20</span>
                    <del class="price-old">£51.20</del>
                    <span class="price-discount">20%</span>
                </div>
            </div>
        </div>
    </div>
}
