<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Kitabxana</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="nav-wrapper">
                    <div class="logo">
                        <i class="fas fa-book-open"></i>
                        <span>E-Kitabxana</span>
                    </div>
                    <ul class="nav-menu" id="navMenu">
                        <li><a href="#home">Ana Səhifə</a></li>
                        <li><a href="#books">Kitablar</a></li>
                        <li><a href="#categories">Kateqoriyalar</a></li>
                        <li><a href="#about">Haqqımızda</a></li>
                        <li><a href="#contact">Əlaqə</a></li>
                    </ul>
                    <div class="nav-actions">
                        <div class="search-box">
                            <input type="text" id="searchInput" placeholder="Kitab axtar...">
                            <i class="fas fa-search"></i>
                        </div>
                        <button class="cart-btn" id="cartBtn">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-count" id="cartCount">0</span>
                        </button>
                        <button class="login-btn" id="loginBtn">Daxil ol</button>
                    </div>
                    <div class="hamburger" id="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
            @RenderBody()
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>E-Kitabxana</h3>
                    <p>Oxumaq həyatı dəyişir</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h4>Sürətli Keçidlər</h4>
                    <ul>
                        <li><a href="#home">Ana Səhifə</a></li>
                        <li><a href="#books">Kitablar</a></li>
                        <li><a href="#about">Haqqımızda</a></li>
                        <li><a href="#contact">Əlaqə</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Kateqoriyalar</h4>
                    <ul>
                        <li><a href="#">Bədii ədəbiyyat</a></li>
                        <li><a href="#">Elm</a></li>
                        <li><a href="#">Tarix</a></li>
                        <li><a href="#">Texnologiya</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Abunə ol</h4>
                    <p>Yeni kitablardan xəbərdar ol</p>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Email ünvanınız">
                        <button type="submit"><i class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 E-Kitabxana. Bütün hüquqlar qorunur.</p>
            </div>
        </div>
    </footer>

    <!-- Cart Modal -->
    <div class="modal" id="cartModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Səbət</h3>
                <button class="close-modal" id="closeCart">&times;</button>
            </div>
            <div class="modal-body" id="cartItems">
                <p class="empty-cart">Səbət boşdur</p>
            </div>
            <div class="modal-footer">
                <div class="cart-total">
                    <span>Cəmi:</span>
                    <span id="cartTotal">0 ₼</span>
                </div>
                <button class="checkout-btn">Sifarişi tamamla</button>
            </div>
        </div>
    </div>

    <!-- Book Detail Modal -->
    <div class="modal" id="bookModal">
        <div class="modal-content modal-large">
            <button class="close-modal" id="closeBook">&times;</button>
            <div class="modal-body" id="bookDetail">
                <!-- Book details will be loaded here -->
            </div>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
